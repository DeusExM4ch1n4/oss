name: presubmits
on:
  pull_request:
    branches:
      - main
jobs:
  # Runs smart contract test code located in
  # backend/test using Truffle.  
  smart-contract-tests:
    runs-on: ubuntu-latest
    defaults:
      run:
        working-directory: ./backend
    steps:
      - uses: actions/checkout@v2
      - uses: actions/setup-node@v2
        with:
          node-version: '14'
      - run: npm install
      - run: npm install -g truffle
      - run: npm install -g ganache-cli
      - run: ganache-cli --defaultBalanceEther 10000 > /dev/null &
      - run: truffle test

  # Runs Share RPC server test code located in 
  # backend/server_lib.test.js using Jest.
  rpc-server-jest-tests:
    runs-on: ubuntu-latest
    defaults:
      run:
        working-directory: ./backend
    steps:
        - uses: actions/checkout@v2
        - uses: actions/setup-node@v2
          with:
            node-version: '14'
        - run: npm install
        - run: npm install -g ganache-cli
        - run: curl -O https://binaries.soliditylang.org/linux-amd64/solc-linux-amd64-v0.8.11%2Bcommit.d7f03943
        - run: sudo mv solc-linux-amd64-v0.8.11%2Bcommit.d7f03943 /usr/bin/solc
        - run: sudo chmod a+x /usr/bin/solc
        - run: solc --version
        - run: ganache-cli --defaultBalanceEther 10000 -m "pave trigger reduce glass cram famous still web glare mechanic train next" > /dev/null &
        - run: npm run test